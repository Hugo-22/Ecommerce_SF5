{% extends 'base.html.twig' %}

{% block title %}Ajouter une catégorie{% endblock %}

{% block body %}
    <h1>Nouvelle catégorie</h1>

    {{ form_start(form) }}

    {{ form_errors(form) }}

    <div class="row">
        <div class="col">
            {{ form_row(form.name) }}
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-3">
        <i class="fas fa-save"></i>
        Créer la catégorie
    </button>

    {{ form_end(form) }}

{% endblock %}
