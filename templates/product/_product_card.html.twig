<div class="card">
    <img src="{{ product.picture }}" class="img-fluid" alt="img">
    <div class="card-body">
        <h4 class="card-title">{{ product.name }} ({{ product.price / 100 }} €)</h4>
        <span class="badge bg-dark">
                        {{ product.category.name }}
                    </span>
        <p class="card-text">{{ product.description }}</p>
        <a href="{{ path('product_show', {'category_slug': product.category.slug , 'slug': product.slug}) }}" class="btn btn-primary btn-sm">Détails</a>
        <a href="{{ path('panier_add', {'id': product.id}) }}" class="btn btn-success btn-sm">Ajouter</a>
    </div>
</div>